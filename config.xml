<?xml version='1.0' encoding='utf-8'?>
<widget
   id="com.demomvitalia.com"
   version="0.0.1"   
   xmlns="http://www.w3.org/ns/widgets"
   xmlns:gap="http://phonegap.com/ns/1.0">

<name>Scan</name>
<description> Testing the on-board accelerometer </description>
<author email="websmurf@evothings.com" href="http://evothings.com"> Webb S Murph </author>
<content src="index.html" />

<plugin name="cordova-plugin-ibeacon" spec="3.4.0" />
<plugin name="cordova-plugin-device-motion" spec="1.2.2" />
<plugin name="cordova-plugin-vibration" spec="2.1.2" />
<plugin name="cordova-plugin-bluetooth-status" spec="1.0.4" />
<plugin spec="https://github.com/mvitalia/cordova-ble-plugin.git#25c05cc" source="git" />
<plugin name="cordova-plugin-dialogs" spec="1.3.0" />
<plugin spec="https://github.com/katzer/cordova-plugin-local-notifications#ios10" source="git" />
<plugin spec="https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git" source="git" />

<access origin="*" /> <allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />

<platform name="android">
   <allow-intent href="market:*" />
</platform>

<feature name="Notification">
<param name="android-package" value="org.apache.cordova.dialogs.Notification" />
</feature>

<feature name="SocialSharing">
  <param name="ios-package" value="SocialSharing" />
</feature>

<platform name="ios">
   <allow-intent href="itms:*" />
   <allow-intent href="itms-apps:*" />
</platform>
</widget>